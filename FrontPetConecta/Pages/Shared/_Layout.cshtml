<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontPetConecta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontPetConecta.styles.css" asp-append-version="true" />
</head>
<body class="'d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-between">
                <!-- Left side with logo -->
                <div class="navbar-brand">
                    <img src="~/images/icon.png" alt="" width="100" height="100">
                    <h3>PetConecta</h3> <!-- Adjust width and height as needed -->
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <!-- Right side with links -->
                    <div class="ml-auto">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="Clientes">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Funcionarios">Funcionarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Produtos">Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Vendas">Efetuar Venda</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main class="flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white">
        <div class="container d-flex justify-content-center">
            &copy; 2024 - PetConecta - Todos os direitos reservados
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
