@page "/Clientes"
@model FrontPetConecta.Pages.Clientes.ClientesModel;

<h3 class="mt-5">Nossos clientes</h3>


<div>
    <table class="p-5">
        <thead>
            <tr>
                <th>Código do Cliente</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Tipo de Pet</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clienteModel in Model.ClienteList)
            {
                <tr>
                    <td>@Html.DisplayTextFor(model => clienteModel.IdCliente)</td>
                    <td>@Html.DisplayTextFor(model => clienteModel.NomeCliente)</td>
                    <td>@Html.DisplayTextFor(model => clienteModel.EmailCliente)</td>
                    <td>@Html.DisplayTextFor(model => clienteModel.TelefoneCliente)</td>
                    <td>@Html.DisplayTextFor(model => clienteModel.EnderecoCliente)</td>
                    <td>@Html.DisplayTextFor(model => clienteModel.TipoPet)</td>
                    <td class="borderNone">
                        <a asp-page="Edit" asp-route-id="@clienteModel.IdCliente" class="btn-edit">Alterar</a>
                        <a asp-page="Details" asp-route-id="@clienteModel.IdCliente" class="btn-details">Visualizar</a>
                        <a asp-page="Delete" asp-route-id="@clienteModel.IdCliente" class="btn-delete">Remover</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="mt-3">
        <a asp-page="/Clientes/Create" class="btn-create">+ Adicionar</a>

    </div>
   
</div>
